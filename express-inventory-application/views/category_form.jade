extends layout 

block content 
    h1= title 

    form(action="", method="POST") 
        div 
            label(for="categoryNameInput") *Category Name: 
            input(
                id="categoryNameInput"
                type="text"
                name="categoryName"
                required
                value=newCategoryDoc ? newCategoryDoc.name : ""
            )
        div
            label(for="categoryDescriptionInput") *Category Description: 
            textarea(
                id="categoryDescriptionInput"
                type="text"
                name="categoryDescription"
                required
            )= newCategoryDoc ? newCategoryDoc.description : ""
        button Submit

    if errorsArray 
        ul
            each error in errorsArray 
                li= error.msg